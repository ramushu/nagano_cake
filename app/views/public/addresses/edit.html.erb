<div class="container p-5">

  <div class="row">
    <div class="col-md-10 offset-md-1">

      <% if @address.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@address.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @address.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">配送先編集</h2>

      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label "郵便番号（ハイフンなし）" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label "住所" %></td>
              <td colspan="2"><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label "宛名" %></td>
              <td><%= f.text_field :name %></td>
              <td></td>
              <td>
                <%= f.submit "変更内容を保存", class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>

    </div>
  </div>
</div>