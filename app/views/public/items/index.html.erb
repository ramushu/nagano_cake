<div class="container p-5">
  <div class="row">
    <div class="col-md-3">

      <%= render 'public/genre', genres: @genres %>

    </div>

    <div class="col-md-8">
      <div class="my-4">
        <h2 class="font-weight-bold d-inline-block">
          <%= "#{@item}一覧" %>
        </h2>
        <h6 class="d-inline-block">
          <%= "(全#{@items.count}件)" %>
        </h6>
      </div>

      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="p-2 w-25">
            <%= link_to item_path(item) do %>
              <%= image_tag item.item_image, class: "img-fluid" %>
            <% end %><br>
            <%= item.name %><br>
            <%= item.price.to_s(:delimited) %>
          </div>
        <% end %>
      </div>

      <%= paginate @items %>

    </div>
  </div>
</div>
