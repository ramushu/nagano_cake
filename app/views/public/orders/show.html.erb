<div class="container p-5">

  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">注文履歴詳細</h2>

      <div class="row text-nowrap">

        <div class="col-md-8">
          <h6 class="font-weight-bold">注文情報</h6>
          <table class="table table-bordered">
            <tbody class="thead-light">
              <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td>
                  <%= @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td><%= @order.status_i18n %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-md-4">
          <h6 class="font-weight-bold">請求情報</h6>
          <table class="table table-bordered">
            <tbody class="thead-light">
              <tr>
                <th>商品合計</th>
                <td><%= @total_price %></td>
                <!--<td></%= @order.order_details.price.round.to_s(:delimited) %></td>-->
                <!--<td></%= @order.total.round.to_s(:delimited) %></td>-->
              </tr>
              <tr>
                <th>配送料</th>
                <td><%= @order.postage %></td>
              </tr>
              <tr>
                <th>ご請求額</th>
                <td><%= @order.total_payment %></td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>

      <h6 class="font-weight-bold">注文内容</h6>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.taxin_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.sum_of_price %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>