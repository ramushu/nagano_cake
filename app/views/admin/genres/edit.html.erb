<div class="container p-5">

  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@genre.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">ジャンル編集</h2>

      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="form-group mb-4">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "ml-4" %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-4" %>
        </div>
      <% end %>

    </div>
  </div>
</div>