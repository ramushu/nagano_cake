<div class="container p-5">

  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@genre.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">ジャンル一覧・追加</h2>

      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group mb-4">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "ml-4" %>
          <%= f.submit "新規登録", class: "btn btn-success ml-4" %>
        </div>
      <% end %>

      <div class="col-md-8">
        <table class="table table-hover">
          <thead class="table-active">
            <tr>
              <th colspan="2", class="text-center">ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tbody>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td></td>
                <td class="center-block">
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</div>