<div class="container p-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <!--<div class="mb-4 px-4 bg-light text-center text-nowrap">-->
        <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">管理者ログイン</h2>
      <!--</div>-->

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="row">
            <div class="col-md-3 offset-md-1 mb-4">
              <%= f.label "メールアドレス" %>
            </div>
            <div class="col-md-8 ">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="row">
            <div class="col-md-3 offset-md-1 mb-4">
              <%= f.label "パスワード" %>
            </div>
            <div class="col-md-8 ">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8 offset-md-4">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-8 offset-md-4">
          <%= render "admin/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>