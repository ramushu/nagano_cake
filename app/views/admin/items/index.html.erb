<div class="container p-5">
  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">商品一覧</h2>

      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th colspan="3">商品名</th>
            <th>税抜価格</th>
            <th colspan="3">ジャンル</th>
            <th colspan="2">ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td colspan="3">
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td colspan="3">
                <%= item.genre.name %>
              </td>
              <td>
                <%= item.is_active ? '販売中' : '販売停止中' %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
