<div class="container p-5">

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@item.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">商品新規登録</h2>

      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
                <%= f.label :item_image, "商品画像" %>
            </div>
            <div class="col-md-8">
              <%= f.file_field :item_image, accept: "image/*", class: "form-control-file" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
              <%= f.label :name, "商品名" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :name, placeholder:"商品名" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
              <%= f.label :introduction, "商品説明" %>
            </div>
            <div class="col-md-8">
              <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
              <%= f.label :genre_id, "ジャンル" %>
            </div>
            <div class="col-md-8">
              <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
              <%= f.label :price, "税抜価格" %>
            </div>
            <div class="col-md-8">
              <%= f.text_field :price, placeholder: "1,000" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4">
          <div class="row">
            <div class="col-md-2 offset-md-2">
              <%= f.label :is_active, "販売ステータス" %>
            </div>
            <div class="col-md-8">
              <%= f.radio_button :is_active, "true" %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, "false" %>
              <%= f.label :is_active, "販売停止中" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-4 text-center">
          <%= f.submit "新規登録", class: "btn btn-success ml-4" %>
        </div>

      <% end %>

    </div>
  </div>
</div>