<div class="container p-5">
  <div class="row">
    <div class="col-md-10 offset-md-1">

      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">会員一覧</h2>

      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th colspan="3">氏名</th>
            <th colspan="3">メールアドレス</th>
            <th colspan="2">ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td colspan="3">
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.full_name %>
                <% end %>
              </td>
              <td colspan="3">
                <%= customer.email %>
              </td>
              <td colspan="2">
                <%= customer.is_deleted ? '退会' : '有効' %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%= paginate @customers %>

    </div>
  </div>
</div>