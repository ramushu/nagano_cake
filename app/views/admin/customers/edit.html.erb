<div class="container p-5">

  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2 class="mb-4 px-4 bg-light text-center text-nowrap d-inline-block">
        <%= "#{@customer.last_name}#{@customer.first_name}さんの会員情報編集" %>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td><%= f.label "氏名" %></td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><%= f.label "フリガナ" %></td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label "郵便番号" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label "電話番号" %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label "会員ステータス" %></td>
              <td>
                <%= f.radio_button :is_deleted, "false" %>
                <%= f.label :is_deleted, "有効" %>
                <%= f.radio_button :is_deleted, "true" %>
                <%= f.label :is_deleted, "退会" %>
              </td>
            </tr>
            <tr class="text-center">
              <td>
                <%= f.submit "変更を保存", class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>